---
interface Props {
	title: string;
	value: string;
	href: string;
}

const { href, title, value } = Astro.props;
---



<div class="w-full max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 items-center flex flex-col">
	
		<img class="p-8 rounded-t-lg" src="https://dummyimage.com/250x250" alt="product image" />

	<div class="px-5 pb-5">
			<a href={href}>
					<h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white">{title}</h5>
			</a>
			<div class="flex items-center mt-2.5 mb-5">

			</div>
			<div class="flex items-center justify-between gap-2">
					<span class="text-3xl font-bold text-gray-900 dark:text-white">R${value}</span>
					<a href="#" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Adicionar ao carrinho</a>
			</div>
	</div>
</div>

